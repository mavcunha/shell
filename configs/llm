# vim: ft=sh
# shortcuts for llm utility

# shell ask
shask() {
  local promtp="$*"
  local response=$(llm -t shell "${promtp}")
  if [[ -z ${response} ]]; then
    echo "No response from llm"
  else
    print -r "run >>>${response}<<< (enter/CTRL-C)?"
    read ANSWER # wait for use input
    print -S "${response}"
    eval ${response}
  fi
}

# ask the dev profile
dask() {
  local promtp="$*"
  llm -t dev "${promtp}"
}
