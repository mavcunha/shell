# vim: ft=zsh

# adds unversioned python to path, 
# instructions from homebrew formulae itself
add_to_path '/opt/homebrew/opt/python@3.11/libexec/bin'

# shortcut for poetry dep management for Python
alias p='poetry'
alias pr='poetry run'

# Python fails if is defined as LC_CTYPE=UTF-8
export LC_CTYPE=en_US.UTF-8

# Adds unversioned python to path
add_to_path "/usr/local/opt/python@3.11/libexec/bin"
